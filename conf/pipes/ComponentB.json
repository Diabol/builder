{
    "name":"Component-B",
    "phases":[
        {
            "name":"Commit",
            "tasks":[
                {
                    "taskName":"Compile",
                    "command":"sleep 3",
                    "triggersTasks":["Unit-test", "Sonar"]
                },
                {
                    "taskName":"Unit-test",
                    "command":"sleep 3",
                    "triggersTasks":["Package"]
                },
                {
                    "taskName":"Sonar",
                    "isBlocking": false,
                    "command":"conf/pipes/cmd/sonar.sh"
                },
                {
                    "taskName":"Package",
                    "command":"sleep 3"
                }
            ]
        },
        {
            "name":"CI",
            "tasks":[
                {
                    "taskName":"Deploy",
                    "command":"conf/pipes/cmd/deploy-ci.sh",
                    "triggersTasks":["Integration-test"]
                },
                {
                    "taskName":"Integration-test",
                    "command":"echo CI:Integration-test..."
                }
            ]
        },
        {
            "name":"QA",
            "tasks":[
                {
                    "taskName":"Deploy",
                    "isAutomatic":false,
                    "command":"sleep 3",
                    "triggersTasks":["Manual-test"]
                },
                {
                    "taskName":"Manual-test",
                    "command":"sleep 3"
                }
            ]
        }
    ]
}