{
    "name":"Component-B",
    "phases":[
        {
            "name":"Commit",
            "tasks":[
                {
                    "taskName":"Compile",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo Commit:Compile done",
                    "triggersTasks":["Unit-test", "Sonar"]
                },
                {
                    "taskName":"Unit-test",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo Commit:Unit-Test done",
                    "triggersTasks":["Package"]
                },
                {
                    "taskName":"Sonar",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo Commit:Sonar done"
                },
                {
                    "taskName":"Package",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo Commit:Package done"
                }
            ]
        },
        {
            "name":"CI",
            "tasks":[
                {
                    "taskName":"Deploy",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo CI:Deploy done",
                    "triggersTasks":["Integration-test"]
                },
                {
                    "taskName":"Integration-test",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo CI:Integration-test done"
                }
            ]
        },
        {
            "name":"QA",
            "tasks":[
                {
                    "taskName":"Deploy",
                    "isAutomatic":false,
                    "command":"sleep 3 && echo QA:Deploy done",
                    "triggersTasks":["Manual-test"]
                },
                {
                    "taskName":"Manual-test",
                    "isAutomatic":true,
                    "command":"sleep 3 && echo QA:Manual-test done"
                }
            ]
        }
    ]
}